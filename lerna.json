{
  "npmClient": "yarn",
  "packages": [
    "packages/component-*",
    "packages/foundations",
    "packages/foundations-*",
    "packages/css-*",
    "packages/shared-component-*",
    "packages/config-*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": ["*.md"]
    },
    "version": {
      "message": "chore(release): publish"
    }
  },
  "useWorkspaces": true
}
