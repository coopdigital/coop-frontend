{
  "npmClient": "npm",
  "packages": [
    "packages/component-*",
    "packages/foundations-*",
    "packages/css-*",
    "packages/shared-component-*",
    "packages/config-*",
    "design-system"
  ],
  "version": "independent",
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": ["*.md"]
    },
    "bootstrap": {
      "ignore": ["@coopdigital/react-ui"]
    }
  }
}
