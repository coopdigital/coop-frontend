{
  "name": "@coopdigital/coop-frontend",
  "description": "Co-op Frontend and Design System",
  "author": "Co-op Digital",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "12.x",
    "npm": "7.x"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.13.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-extension": "^0.1.3",
    "core-js": "^3.8.3",
    "cssnano": "^4.1.10",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "microbundle": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^8.3.1",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.2.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "publish": "lerna publish",
    "postinstall": "lerna clean --yes && lerna bootstrap --hoist",
    "lint": "npm-run-all lint:*",
    "lint:css": "lerna exec --ignore @coopdigital/react-ui --ignore @coopdigital/config-eslint --stream -- 'stylelint 'src/**/*.{css,pcss}' --fix'",
    "lint:js": "lerna exec --ignore design-system --stream -- 'eslint src/ contentful/ --ext .cjs,.js,.jsx,.mjs --fix --no-error-on-unmatched-pattern'",
    "prebuild": "npm run test",
    "build": "npm-run-all build:*",
    "build:css": "lerna exec --ignore design-system --ignore @coopdigital/react-ui --ignore @coopdigital/config-eslint --stream -- 'postcss src/**/*.pcss --dir dist/ --ext css'",
    "build:js": "lerna exec --ignore design-system --ignore @coopdigital/react-ui --ignore @coopdigital/config-eslint --stream -- 'babel src/ --out-dir dist/ --source-maps --config-file ../../babel.config.js'",
    "heroku-postbuild": "npm run --prefix design-system build",
    "heroku-cleanup": "npm prune --production",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "build:component:css": "lerna exec --scope @coopdigital/component-editorial-card 'postcss src/css/*.pcss --dir dist/css --ext css'",
    "build:component:html": "lerna exec --scope @coopdigital/component-editorial-card 'cp -R ./src/html ./dist'",
    "build:component:react": "lerna exec --scope @coopdigital/component-editorial-card 'babel src/react --out-dir dist/react --source-maps --config-file ../../babel.config.js'",
    "build:component:js": "lerna exec --scope @coopdigital/component-editorial-card 'rm -rf dist && microbundle --compress false --jsx React.createElement'",
    "build:package-test": "lerna run --scope @coopdigital/component-editorial-card build:rollup",
    "build:rollup-css": "lerna exec --scope @coopdigital/component-editorial-card '../../cssBuilder.js'",
    "build:rollup-js": "lerna exec --scope @coopdigital/component-editorial-card '../../package-builder.js'",
    "build:rollup-all": "run-s build:rollup-css build:rollup-js"
  },
  "dependencies": {
    "@coopdigital/foundations-buttons": "^2.5.7",
    "@coopdigital/foundations-global": "^3.3.3",
    "@coopdigital/foundations-typography": "^4.2.4",
    "@coopdigital/foundations-vars": "^3.8.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "rollup": "^2.61.1",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-rename": "^1.0.1"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "heroku-run-build-script": true
}
