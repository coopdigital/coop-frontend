{
  "name": "@coopdigital/coop-frontend",
  "description": "Co-op Frontend",
  "author": "Co-op Digital",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-optional-chaining": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.13",
    "autoprefixer": "^10.0.2",
    "babel-plugin-module-extension": "^0.1.3",
    "core-js": "^3.8.3",
    "cssnano": "^4.1.10",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^8.3.0",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.0",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.2.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^4.1.4"
  },
  "scripts": {
    "publish": "lerna publish",
    "postinstall": "lerna clean --yes && lerna bootstrap --hoist",
    "lint": "npm-run-all lint:*",
    "lint:css": "lerna exec --stream -- 'stylelint 'src/**/*.{css,pcss}' --fix'",
    "lint:js": "lerna exec --stream -- 'eslint src/ contentful/ --ext .cjs,.js,.mjs --fix --no-error-on-unmatched-pattern'",
    "prebuild": "npm run test",
    "build": "npm-run-all build:*",
    "build:css": "lerna exec --ignore design-system --stream -- 'postcss src/*.pcss --dir dist/ --ext css'",
    "build:js": "lerna exec --ignore design-system --stream -- 'babel src/ --out-dir dist/ --source-maps --config-file ../../babel.config.js'",
    "pretest": "npm run lint",
    "test": "jest --coverage"
  }
}
