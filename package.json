{
  "name": "@coopdigital/coop-frontend",
  "description": "Co-op Frontend and Design System",
  "author": "Co-op Digital",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@storybook/addon-a11y": "^6.2.0-beta.9",
    "@storybook/addon-actions": "^6.2.0-beta.9",
    "@storybook/addon-docs": "^6.2.0-beta.9",
    "@storybook/addon-essentials": "^6.2.0-beta.9",
    "@storybook/addon-links": "^6.2.0-beta.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "^6.2.0-beta.9",
    "@storybook/eslint-config-storybook": "^3.0.0",
    "@storybook/linter-config": "^3.0.0",
    "@storybook/react": "^6.2.0-beta.9",
    "@storybook/theming": "^6.2.0-beta.9",
    "@whitespace/storybook-addon-html": "^4.2.0",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-extension": "^0.1.3",
    "core-js": "^3.9.1",
    "css-loader": "^5.0.2",
    "cssnano": "^4.1.10",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.7",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^8.3.1",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.0",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.2.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "storybook-addon-designs": "^6.0.0-alpha.3",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^4.1.4"
  },
  "scripts": {
    "publish": "lerna publish",
    "postinstall": "lerna clean --yes && lerna bootstrap --hoist",
    "lint": "npm-run-all lint:*",
    "lint:css": "lerna exec --stream -- 'stylelint 'src/**/*.{css,pcss}' --fix'",
    "lint:js": "lerna exec --stream -- 'eslint src/ contentful/ --ext .cjs,.js,.jsx,.mjs --fix --no-error-on-unmatched-pattern'",
    "prebuild": "npm run test",
    "build": "npm-run-all build:*",
    "build:css": "lerna exec --ignore design-system --stream -- 'postcss src/*.pcss --dir dist/ --ext css'",
    "build:js": "lerna exec --ignore design-system --stream -- 'babel src/ --out-dir dist/ --source-maps --config-file ../../babel.config.js'",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@coopdigital/foundations-global": "^3.3.3",
    "@coopdigital/foundations-typography": "^4.2.4",
    "@coopdigital/foundations-vars": "^3.8.0"
  }
}
