{
  "name": "@coopdigital/coop-frontend",
  "description": "Co-op Frontend and Design System",
  "author": "Co-op Digital",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "12.x",
    "npm": "7.x"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "autoprefixer": "^10.2.6",
    "babel-plugin-module-extension": "^0.1.3",
    "core-js": "^3.8.3",
    "cssnano": "^4.1.10",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^8.3.1",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.2.0",
    "rollup": "^2.62.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-rename": "^1.0.1",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "postinstall": "lerna clean --yes && lerna bootstrap --hoist",
    "lint": "npm-run-all lint:*",
    "lint:css": "lerna exec --stream -- 'stylelint 'src/**/*.{css,pcss}' --fix --allow-empty-input'",
    "lint:js": "lerna exec --stream -- 'eslint src/ contentful/ --ext .cjs,.js,.jsx,.mjs --fix --no-error-on-unmatched-pattern'",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "prebuild": "npm run test",
    "build": "npm-run-all build:*",
    "build:css": "lerna exec --ignore @coopdigital/config-eslint --stream -- 'postcss src/*.pcss --dir dist/ --ext css'",
    "build:js": "lerna exec --ignore @coopdigital/config-eslint --stream -- 'babel src/ --out-dir dist/ --source-maps --config-file ../../babel.config.js'",
    "build:foundations": "lerna run --stream --scope @coopdigital/foundations build",
    "publish": "lerna publish"
  },
  "heroku-run-build-script": true
}
