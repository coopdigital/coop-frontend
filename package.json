{
  "name": "@coopdigital/foundations",
  "description": "Co-op CSS Foundations libraries",
  "author": "Co-op Digital",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "autoprefixer": "^10.0.2",
    "cssnano": "^4.1.10",
    "lerna": "^3.22.1",
    "postcss": "^8.2.4",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^8.3.0",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.0",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.2.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.1.2"
  },
  "scripts": {
    "publish": "lerna publish",
    "postinstall": "lerna clean --yes && lerna bootstrap --hoist",
    "lint": "lerna exec --ignore design-system --stream -- 'stylelint 'src/**/*.{css,pcss}' --fix'",
    "build": "lerna exec --ignore design-system --stream -- 'postcss src/*.pcss --dir dist/ --ext css'",
    "build:all": "npm run lint && npm run build"
  }
}
