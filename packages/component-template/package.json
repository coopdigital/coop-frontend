    "precss": "^3.1.2",
    "prettier": "^1.14.3",
    "stylelint": "^9.7.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-prettier": "^1.0.3"
  },
  "bugs": {
    "url": "https://github.com/coopdigital/component-template/issues"
