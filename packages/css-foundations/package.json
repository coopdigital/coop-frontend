    "@coopdigital/foundations-layout": "^2.0.10",
    "@coopdigital/foundations-tables": "^1.1.10",
    "@coopdigital/foundations-typography": "^3.1.0",
    "@coopdigital/foundations-vars": "^2.2.2",
    "autoprefixer": "^9.6.0",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
