/* Membership hero */

@import "@coopdigital/foundations-vars";

:root {
  /* Connector curved line (small) */
  --membership-hero-background-small-width: 800px;
  --membership-hero-background-small-height: 265px;
  --membership-hero-background-small-origin-x: 50%;
  --membership-hero-background-small-offset-x: calc(
    (var(--membership-hero-background-small-width) / -2) - 100px
  );
  --membership-hero-background-small-offset-y: 60px;

  /* Connector curved line (medium) */
  --membership-hero-background-medium-width: 1440px;
  --membership-hero-background-medium-height: 476px;
  --membership-hero-background-medium-origin-x: 50%;
  --membership-hero-background-medium-offset-x: calc(
    (var(--membership-hero-background-medium-width) / -2) - 120px
  );
  --membership-hero-background-medium-offset-y: 62px;

  /* Connector curved line (large) */
  --membership-hero-background-large-width: 1732px;
  --membership-hero-background-large-height: 573px;
  --membership-hero-background-large-origin-x: 50%;
  --membership-hero-background-large-offset-x: calc(
    (var(--membership-hero-background-large-width) / -2) + 50px
  );
  --membership-hero-background-large-offset-y: -174px;

  /* Connector curved line (xlarge) */
  --membership-hero-background-xlarge-offset-x: calc(
    (var(--membership-hero-background-medium-width) / -2) - 340px
  );
  --membership-hero-background-xlarge-offset-y: 46px;

  /* Connector full-width repeater (left) */
  --membership-hero-connector-left-offset-x: 0;
  --membership-hero-connector-left-offset-y: calc(var(--spacing-32) - 12px);
  --membership-hero-connector-left-origin-x: 0;

  /* Connector full-width repeater (left, large) */
  --membership-hero-connector-left-large-offset-x: 0;
  --membership-hero-connector-left-large-offset-y: calc(
    var(--spacing-48) - 8px
  );
  --membership-hero-connector-left-large-origin-x: 0;

  /* Connector full-width repeater (left, xlarge) */
  --membership-hero-connector-left-xlarge-offset-x: -100px;
  --membership-hero-connector-left-xlarge-offset-y: calc(
    var(--spacing-64) - 8px
  );
  --membership-hero-connector-left-xlarge-origin-x: 0;

  /* Connector full-width repeater (right) */
  --membership-hero-connector-right-offset-x: 0;
  --membership-hero-connector-right-offset-y: 264px;
  --membership-hero-connector-right-origin-x: 50%;

  /* Connector full-width repeater (right, xlarge) */
  --membership-hero-connector-right-xlarge-offset-x: 100px;
  --membership-hero-connector-right-xlarge-offset-y: 329px;
  --membership-hero-connector-right-xlarge-origin-x: 50%;

  /* Hero image (small) */
  --membership-hero-image-small-width: 400px;
  --membership-hero-image-small-height: 300px;
  --membership-hero-photo-small-width: 338px;

  /* Hero image (medium) */
  --membership-hero-image-medium-width: 512px;
  --membership-hero-image-medium-height: 384px;
  --membership-hero-photo-medium-width: 440px;

  /* Hero image (large) */
  --membership-hero-image-large-width: 640px;
  --membership-hero-image-large-height: 480px;
  --membership-hero-photo-large-width: 555px;
}

.coop-c-membership-hero {
  position: relative;
  overflow: hidden;
  margin: 0 auto;

  /* required to overwrite foundation CSS */
  & p:last-child {
    margin-bottom: 0;
  }
}

.coop-c-membership-hero__inner {
  position: relative;
  z-index: 1;

  max-width: 81rem;
  min-height: 410px;
  margin: 0 auto;
  padding: var(--spacing-24) var(--spacing-16) 0;

  @media (--mq-medium) {
    min-height: 440px;
    padding: var(--spacing-32) var(--spacing-16) var(--spacing-48);
  }

  @media (--mq-large) {
    min-height: 500px;
    padding: var(--spacing-32) var(--spacing-24) var(--spacing-64);
  }

  @media (--mq-xlarge) {
    padding: var(--spacing-48) var(--spacing-16) var(--spacing-64);
  }
}

.coop-c-membership-hero__content {
  position: relative;
  z-index: 1;
  max-width: 33rem; /* 528px */

  @media (--mq-small) {
    padding-bottom: var(--spacing-64);
  }

  @media (--mq-medium) {
    padding-bottom: var(--spacing-24);
  }
}

.coop-c-membership-hero__body {
  @media (--mq-small) {
    max-width: 80%;
  }

  @media (--mq-medium) {
    max-width: 90%;
  }
}

.coop-c-membership-hero__title {
  margin-bottom: var(--spacing-24);

  @media (--mq-medium) {
    margin-bottom: var(--spacing-16);
  }
}

.coop-c-membership-hero__cta {
  margin-top: var(--spacing-24);
  font-size: var(--type-body-s);

  & .coop-t-link {
    color: var(--color-text);
  }
}

.coop-c-membership-hero__btns {
  margin-bottom: var(--spacing-24);
  /* removes whitespace caused by inline-block */
  font-size: 0;
}

.coop-c-membership-hero__btns .coop-btn--app {
  margin: 0 var(--spacing-16) var(--spacing-16) 0;

  &:last-child {
    margin-right: 0;
  }
}

.coop-c-membership-hero__caption {
  margin-bottom: 0;
}

.coop-c-membership-hero__media {
  position: relative;
  z-index: 0;
  margin: 0;
}

.coop-c-membership-hero__picture,
.coop-c-membership-hero__image {
  display: block;
}

/* Digital card promo picture */
.coop-c-membership-hero__picture {
  position: relative;
  z-index: 1;
}

.coop-c-membership-hero__image {
  display: block;
  width: 100%;
}

/* Connector curved line */
.coop-c-membership-hero__connector {
  position: absolute;
  z-index: 0;
  top: 0;

  /* Small connector */
  left: var(--membership-hero-background-small-origin-x);
  width: var(--membership-hero-background-small-width);
  height: var(--membership-hero-background-small-height);
  margin-left: var(--membership-hero-background-small-offset-x);
  margin-top: var(--membership-hero-background-small-offset-y);

  /* Large connector (at small viewport) */
  @media (--mq-small) {
    left: var(--membership-hero-background-large-origin-x);
    width: var(--membership-hero-background-large-width);
    height: var(--membership-hero-background-large-height);
    margin-left: var(--membership-hero-background-large-offset-x);
    margin-top: var(--membership-hero-background-large-offset-y);
  }
}

/* Connector full-width repeater */
.coop-c-membership-hero:before,
.coop-c-membership-hero:after {
  position: absolute;
  z-index: 0;
  width: 50%;
  height: 0;
  border-top: 8px solid;
  border-color: inherit;
  content: "";
}

/* Connector full-width repeater (left) */
.coop-c-membership-hero:before {
  bottom: var(--membership-hero-connector-left-offset-y);
  left: var(--membership-hero-connector-left-origin-x);
  margin-left: var(--membership-hero-connector-left-offset-x);
  display: none;

  @media (--mq-small) {
    display: block;
  }

  @media (--mq-large) {
    left: var(--membership-hero-connector-left-large-origin-x);

    /* Offset connector from origin */
    bottom: var(--membership-hero-connector-left-large-offset-y);
    margin-left: var(--membership-hero-connector-left-large-offset-x);
  }

  @media (--mq-xlarge) {
    left: var(--membership-hero-connector-left-xlarge-origin-x);

    /* Offset connector from origin */
    bottom: var(--membership-hero-connector-left-xlarge-offset-y);
    margin-left: var(--membership-hero-connector-left-xlarge-offset-x);
  }
}

/* Connector full-width repeater (right) */
.coop-c-membership-hero:after {
  bottom: var(--membership-hero-connector-right-offset-y);
  left: var(--membership-hero-connector-right-origin-x);
  display: block;

  @media (--mq-small) {
    display: none;
  }

  @media (--mq-xlarge) {
    left: var(--membership-hero-connector-right-xlarge-origin-x);
    display: block;

    /* Offset connector from origin */
    bottom: var(--membership-hero-connector-right-xlarge-offset-y);
    margin-left: var(--membership-hero-connector-right-xlarge-offset-x);
  }
}

.coop-c-membership-hero__path {
  fill: none;
  stroke: inherit;
}

/* Adjust for hero with handset image (4:3) */
.coop-c-membership-hero--handset {
  & .coop-c-membership-hero__content {
    max-width: 21.875rem; /* 350px */

    @media (--mq-medium) {
      max-width: 33rem; /* 528px */
    }
  }

  & .coop-c-membership-hero__media {
    height: var(--membership-hero-image-medium-height);

    @media (--mq-small) {
      position: absolute;
      z-index: 0;
      right: 0;
      right: -5%;
      bottom: 0;
      height: auto;
      margin-top: 0;
    }

    @media (--mq-medium) {
      right: 0;
    }
  }

  & .coop-c-membership-hero__picture {
    position: absolute;
    top: 0;
    left: 50%;

    width: var(--membership-hero-image-medium-width);
    height: var(--membership-hero-image-medium-height);
    margin-left: calc(var(--membership-hero-image-medium-width) / -2);

    @media (--mq-small) {
      position: relative;
      top: auto;
      left: auto;
      width: var(--membership-hero-image-small-width);
      height: var(--membership-hero-image-small-height);
      margin-left: 0;
    }

    @media (--mq-large) {
      width: var(--membership-hero-image-large-width);
      height: var(--membership-hero-image-large-height);
    }
  }

  & .coop-c-membership-hero__connector {
    /* Medium connector (at large viewport) */
    @media (--mq-large) {
      left: var(--membership-hero-background-medium-origin-x);
      width: var(--membership-hero-background-medium-width);
      height: var(--membership-hero-background-medium-height);
      margin-left: var(--membership-hero-background-medium-offset-x);
      margin-top: var(--membership-hero-background-medium-offset-y);
    }

    /* Medium connector (at xlarge viewport) */
    @media (--mq-xlarge) {
      margin-left: var(--membership-hero-background-xlarge-offset-x);
      margin-top: var(--membership-hero-background-xlarge-offset-y);
    }
  }
}

/* Adjust for hero with photo (16:9) */
.coop-c-membership-hero--photo {
  & .coop-c-membership-hero__inner {
    @media (--mq-xlarge) {
      min-height: 580px;
    }
  }

  & .coop-c-membership-hero__content {
    @media (--mq-medium) {
      max-width: 50%;
    }
  }

  & .coop-c-membership-hero__media {
    margin: var(--spacing-32) calc(var(--spacing-16) * -1) 0;

    @media (--mq-medium) {
      position: absolute;
      right: var(--spacing-32);
      bottom: 110px;

      width: var(--membership-hero-photo-small-width);
      margin: 0;
    }

    @media (--mq-large) {
      right: var(--spacing-32);
      bottom: 205px;
      width: var(--membership-hero-photo-medium-width);
    }

    @media (--mq-xlarge) {
      right: var(--spacing-16);
      bottom: 205px;
      width: var(--membership-hero-photo-large-width);
    }
  }

  & .coop-c-membership-hero__connector {
    @media (--mq-large) {
      top: 132px;
    }

    @media (--mq-xlarge) {
      top: 181px;
    }
  }

  &:before,
  &:after {
    display: none;
  }

  &:before {
    @media (--mq-medium) {
      display: block;
    }

    @media (--mq-xlarge) {
      bottom: 56px;
    }
  }
}

/* Adjust for hero with photo (16:9) on home page */
.coop-c-membership-hero--photo.coop-c-membership-hero--home {
  & .coop-c-membership-hero__title {
    @media (--mq-medium) {
      margin-bottom: var(--spacing-32);
      font-size: 2.625rem; /* 42px */
    }

    @media (--mq-large) {
      font-size: 2.875rem; /* 46px */
    }

    @media (--mq-xlarge) {
      font-size: 4.25rem; /* 68px */
    }
  }

  & .coop-c-membership-hero__body {
    @media (--mq-large) {
      font-size: 1.375rem; /* 22px */
    }

    @media (--mq-xlarge) {
      font-size: 1.625rem; /* 26px */
    }
  }

  & .coop-c-membership-hero__cta {
    @media (--mq-xlarge) {
      margin-top: var(--spacing-48);
    }
  }

  & .coop-c-membership-hero__connector {
    @media (--mq-large) {
      top: 132px;
    }

    @media (--mq-xlarge) {
      top: 101px;
    }
  }

  &:before {
    @media (--mq-xlarge) {
      bottom: 136px;
    }
  }
}
