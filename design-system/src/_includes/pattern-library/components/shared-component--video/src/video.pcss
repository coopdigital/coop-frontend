/* Video */

@import "@coopdigital/foundations-vars"; 

.coop-c-video {
  padding-bottom: 56.25%; /* 16:9 */
  position: relative;
  width: 100%;
  height: 0;
  margin: 0 0 var(--spacing-medium--1-4) 0;

  iframe {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .section & {
    margin: 0 0 1rem 0;

    @media (--mq-medium) {
      margin-bottom: 2rem;
    }
  }
}